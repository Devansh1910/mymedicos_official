            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/cmetoolbar"
                app:title="CME"
                app:navigationIcon="@drawable/arrow_bk"
                app:titleTextColor="@color/black"
                app:subtitleTextColor="@color/black"
                app:subtitleTextAppearance="@color/black"
                android:backgroundTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/black">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_5ssp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/mode"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="@dimen/_25ssp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_2ssp"
                    android:layout_weight="1"
                    android:background="@drawable/white_back_using_ground" />

                <Spinner
                    android:background="@drawable/white_back_using_ground"
                    android:id="@+id/speciality"
                    android:paddingHorizontal="@dimen/_25ssp"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_2ssp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_40sdp"/>

                <Spinner
                    android:background="@drawable/white_back_using_ground"
                      android:id="@+id/subspeciality"
                    android:paddingHorizontal="@dimen/_25ssp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:layout_height="@dimen/_40sdp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="52.00dp"
                    android:id="@+id/ok"
                    android:text="OK"
                    android:clickable="true"/>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" />


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
