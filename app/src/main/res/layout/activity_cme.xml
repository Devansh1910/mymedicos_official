<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cme.CmeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/cemtoolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/cmetoolbar"
                app:title="CME"
                app:navigationIcon="@drawable/arrowbackforappbar"
                app:titleTextColor="@color/black"
                app:subtitleTextColor="@color/white"
                app:subtitleTextAppearance="@color/white"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_5ssp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/mode"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="@dimen/_25ssp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_2ssp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_back" />

                <Spinner
                    android:background="@drawable/spinner_back"
                    android:id="@+id/speciality"
                    android:paddingHorizontal="@dimen/_25ssp"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_2ssp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_40sdp"/>

                <Spinner
                    android:background="@drawable/spinner_back"
                    android:id="@+id/subspeciality"
                    android:paddingHorizontal="@dimen/_25ssp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:layout_height="@dimen/_40sdp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="52.00dp"
                    android:id="@+id/ok"
                    android:text="OK"
                    android:clickable="true"/>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:autoStart="true"
                        android:layout_marginHorizontal="@dimen/_5ssp"
                        android:flipInterval="5000">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dc2"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dc3"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/doctorimg1"
                            android:scaleType="centerCrop"/>

                    </ViewFlipper>

                    <com.google.android.material.tabs.TabLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10ssp"
                        android:layout_height="match_parent"
                        android:id="@+id/tablayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/ongoing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing" />

                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/past"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Past" />

                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/upcoming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming" />
                    </com.google.android.material.tabs.TabLayout>

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Include your ViewPager2 and any other UI elements here -->
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/view_pager1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <!--                <androidx.recyclerview.widget.RecyclerView-->
                    <!--                    android:id="@+id/recyclerview3"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:orientation="vertical">-->

                    <!--                </androidx.recyclerview.widget.RecyclerView>-->
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:fabCustomSize="55dp"
        android:clickable="true"
        app:tint="@color/black"
        app:maxImageSize="@dimen/_35ssp"
        android:contentDescription="Add CME"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>