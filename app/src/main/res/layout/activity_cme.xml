                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:autoStart="true"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:flipInterval="5000">

                    <ImageView
