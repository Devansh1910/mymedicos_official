<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_190sdp"
        android:backgroundTint="#E8E8E8"
        android:layout_height="@dimen/_140sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cme_img_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_banner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dr_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Oscar"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_18sdp"/>

                <TextView
                    android:id="@+id/dr_presenters"
                    android:background="@drawable/rounded_edittext_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Presenters"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#888787"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dr_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Dr. ABC "
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/dr_pos"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_2ssp"
                    android:paddingVertical="@dimen/_2ssp"
                    android:text="Surgeon"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#888787"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>