<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.pg.activites.internalfragments.HomePgFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutPg"
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/bottomappabarpg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/backgroundcolor"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/urlopener"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/justforbannerdrawable"/>

                        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                            android:id="@+id/carouselpghome"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:showNavigationButtons="false"
                            app:showCaption="false"
                            app:autoPlay="true"/>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/questionanime"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/questionnn"
                        app:lottie_speed="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/backgroundcolor"
                        android:layout_height="wrap_content"
                        android:text="DAILY BRAINSTORM"
                        android:textColor="@color/unselected"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/perdayquestions"
                    android:layout_width="match_parent"
                    android:elevation="@dimen/_2sdp"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nocardpg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B7EFE2"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_100sdp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Come Back Tomorrow!"
                        android:textSize="16sp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:fontFamily="@font/inter"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@android:color/black"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/exploreanime"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:lottie_autoPlay="true"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/suggestanime"
                        app:lottie_speed="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/backgroundcolor"
                        android:layout_height="wrap_content"
                        android:text="SUGGESTED TEST"
                        android:textColor="@color/unselected"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/specialexam"
                    android:layout_width="match_parent"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_100sdp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/sharedarkbtnforpromotion"
                        android:layout_height="wrap_content"
                        android:text="PROMOTE"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:drawableEnd="@drawable/share"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="with Love"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:textColor="@color/unselected"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>