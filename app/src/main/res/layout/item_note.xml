    <!-- res/layout/item_index.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="@dimen/_90sdp"
android:clickable="true"
android:id="@+id/payfortheexam"

android:orientation="vertical"
android:layout_margin="@dimen/_6ssp"

android:background="@drawable/item_background">
<LinearLayout
    android:layout_width="wrap_content"
    android:textAlignment="textEnd"
    android:layout_gravity="end"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attendNowTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAlignment="textEnd"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/_3ssp"
        android:paddingLeft="@dimen/_14ssp"
        android:paddingBottom="@dimen/_4ssp"
        android:text="Download Now"
        android:paddingRight="@dimen/_20ssp"
        android:background="@drawable/corner_resorce"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5ssp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        android:text="Cardiology Prep 03"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/_6ssp"

        android:textStyle="bold" />


</LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_5ssp"
    android:layout_marginLeft="@dimen/_8ssp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/descriptionTextView"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/unselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desciption " />


</LinearLayout>

<TextView
    android:id="@+id/categoryTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Basics of Anatomy"
    android:fontFamily="@font/inter"
    android:paddingRight="@dimen/_10ssp"

    android:layout_marginTop="@dimen/_6ssp"
    android:paddingTop="@dimen/_5ssp"
    android:paddingBottom="@dimen/_2ssp"
    android:paddingLeft="@dimen/_14ssp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@drawable/category_background"

    android:textColor="@android:color/white"
    android:layout_gravity="end" />
</LinearLayout>

