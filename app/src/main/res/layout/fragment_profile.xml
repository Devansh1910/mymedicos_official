<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/profileback"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_13ssp"
                android:background="@drawable/back6"
                android:orientation="horizontal"
                android:padding="@dimen/_13ssp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_10" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Name :"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/user_name_dr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="XYZ"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Email :"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/user_email_dr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="XYZ@gmail.com"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Mobile No :"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/user_phone_dr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:fontFamily="@font/montserrat_medium"
                            android:text="1234567890"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_10sdp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_width="@dimen/_120sdp"
                       android:layout_height="@dimen/_120sdp"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:layout_marginEnd="@dimen/_5sdp"
                       android:background="@color/white"
                       android:outlineSpotShadowColor="@color/white"
                       app:cardCornerRadius="@dimen/_10sdp"
                       app:cardElevation="@dimen/_10sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_20sdp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:fontFamily="@font/montserrat_medium"
                           android:text="Personal\nInfo"
                           android:textSize="@dimen/_15sdp" />

                       <ImageView
                           android:id="@+id/personal_info"
                           android:layout_width="@dimen/_20sdp"
                           android:layout_height="@dimen/_20sdp"
                           android:layout_marginStart="@dimen/_80sdp"
                           android:layout_marginTop="@dimen/_80sdp"
                           android:src="@drawable/baseline_arrow_right_alt_24" />

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="@dimen/_120sdp"
                       android:layout_height="@dimen/_120sdp"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:layout_marginEnd="@dimen/_5sdp"
                       android:background="@color/white"
                       android:outlineSpotShadowColor="@color/white"
                       app:cardCornerRadius="@dimen/_10sdp"
                       app:cardElevation="@dimen/_10sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_20sdp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:fontFamily="@font/montserrat_medium"
                           android:text="Contact\ninfo"
                           android:textSize="@dimen/_15sdp" />

                       <ImageView
                           android:id="@+id/contact_info"
                           android:layout_width="@dimen/_20sdp"
                           android:layout_height="@dimen/_20sdp"
                           android:layout_marginStart="@dimen/_80sdp"
                           android:layout_marginTop="@dimen/_80sdp"
                           android:src="@drawable/baseline_arrow_right_alt_24" />

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="@dimen/_120sdp"
                       android:layout_height="@dimen/_120sdp"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:layout_marginEnd="@dimen/_5sdp"
                       android:background="@color/white"
                       android:outlineSpotShadowColor="@color/white"
                       app:cardCornerRadius="@dimen/_10sdp"
                       app:cardElevation="@dimen/_10sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_20sdp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:fontFamily="@font/montserrat_medium"
                           android:text="info"
                           android:textSize="@dimen/_15sdp" />

                       <ImageView
                           android:layout_width="@dimen/_20sdp"
                           android:layout_height="@dimen/_20sdp"
                           android:layout_marginStart="@dimen/_80sdp"
                           android:layout_marginTop="@dimen/_80sdp"
                           android:src="@drawable/baseline_arrow_right_alt_24" />

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="@dimen/_120sdp"
                       android:layout_height="@dimen/_120sdp"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:layout_marginEnd="@dimen/_5sdp"
                       android:background="@color/white"
                       android:outlineSpotShadowColor="@color/white"
                       app:cardCornerRadius="@dimen/_10sdp"
                       app:cardElevation="@dimen/_10sdp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/_20sdp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:fontFamily="@font/montserrat_medium"
                           android:text="info"
                           android:textSize="@dimen/_15sdp" />

                       <ImageView
                           android:layout_width="@dimen/_20sdp"
                           android:layout_height="@dimen/_20sdp"
                           android:layout_marginStart="@dimen/_80sdp"
                           android:layout_marginTop="@dimen/_80sdp"
                           android:src="@drawable/baseline_arrow_right_alt_24" />

                   </androidx.cardview.widget.CardView>


               </LinearLayout>



           </HorizontalScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>