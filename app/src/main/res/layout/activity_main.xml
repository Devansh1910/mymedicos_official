<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".activities.login.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroundcolor">

        <ImageView
            android:id="@+id/toolbar_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_bk"
            android:layout_gravity="start"
            android:padding="@dimen/_10ssp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15ssp"
        android:paddingVertical="@dimen/_5sdp"
        android:textSize="@dimen/_19sdp"
        android:textColor="@color/unselected"
        android:textStyle="bold"
        android:fontFamily="@font/inter_extrabold"
        android:text="Enter your mobile number to get OTP"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="@dimen/_10ssp"
        android:layout_marginTop="20dp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/circularbordersolid"
        android:id="@+id/phonenumberll"
        android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/indianflag"/>

                <Spinner
                    android:id="@+id/countryCodeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:text="+91"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/maincircularborderring"
                    android:textSize="14sp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/phonenumberedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10 digit mobile number"
                android:textSize="@dimen/_14sdp"
                android:maxLength="10"
                android:importantForAutofill="no"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="10dp"
                android:background="@drawable/maincircularborderring"
                android:inputType="phone|textNoSuggestions"/>

        </LinearLayout>

    <Button
        android:id="@+id/lgn_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10ssp"
        android:text="Login"
        android:layout_marginHorizontal="@dimen/_10ssp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15ssp"
        android:paddingVertical="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/unselected"
        android:fontFamily="@font/inter"
        android:text="By Clicking, I accept the terms of service and privacy policy"/>

</LinearLayout>