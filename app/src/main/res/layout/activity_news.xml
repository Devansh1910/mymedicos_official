<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayoutNews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".activities.news.NewsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/backgroundcolor"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                            android:id="@+id/newscarousel"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            app:showNavigationButtons="false"
                            app:showCaption="false"
                            app:autoPlay="true"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/tobefitted"
                        android:layout_width="match_parent"
                        android:elevation="@dimen/_10ssp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/gradient_top"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/newstoolbar"
                            android:paddingEnd="@dimen/_10ssp"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:menu="@menu/home_menu">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/backtothehomefrompg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/_10sdp"
                                        android:src="@drawable/arrow_bkwhite"
                                        android:layout_marginEnd="@dimen/_10sdp"/>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text="Medical News"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_18sdp"
                                        android:fontFamily="@font/inter"/>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.appcompat.widget.Toolbar>

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.mancj.materialsearchbar.MaterialSearchBar
                                android:id="@+id/searchBarNews"
                                android:layout_width="match_parent"
                                android:background="@color/black"
                                android:padding="@dimen/_2sdp"
                                android:outlineSpotShadowColor="@color/black"
                                android:layout_height="wrap_content"
                                app:mt_hint="Explore what's going on..."
                                app:mt_placeholder="Search News"
                                app:mt_navIconEnabled="true"
                                app:mt_maxSuggestionsCount="10"
                                app:mt_speechMode="false" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="@dimen/_5ssp"
                    android:text="Hot News"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="Get the fastest Medical Updates "
                    android:paddingBottom="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="normal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newsListToday"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="5dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="@dimen/_5ssp"
                        android:text="Discovery"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:text="Explore the latest news"
                        android:paddingBottom="@dimen/_5ssp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="normal" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newsList"
                    android:paddingHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>