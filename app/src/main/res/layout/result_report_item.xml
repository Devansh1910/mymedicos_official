<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/resultQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:padding="@dimen/_12sdp"
        android:background="@drawable/categoryblackkkkkk"
        android:textAllCaps="true"
        android:textColor="#848C8A"
        android:layout_marginBottom="@dimen/_5ssp"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:layout_gravity="start"
        android:gravity="start"
        android:text="Question"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultCorrectOption"
            android:layout_width="match_parent"
            android:background="@drawable/questionsoptionbk"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:drawableStart="@drawable/correcticon"
            android:layout_marginVertical="@dimen/_5ssp"
            android:textAllCaps="true"
            android:textSize="@dimen/_14ssp"
            android:paddingVertical="@dimen/_10ssp"
            android:paddingHorizontal="@dimen/_10ssp"
            android:textColor="@color/black"
            android:textAlignment="gravity"
            android:clickable="true"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Result"/>

        <TextView
            android:id="@+id/resultSelectedOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:background="@drawable/questionsoptionbk"
            android:drawableStart="@drawable/selectedicon"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_5ssp"
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="true"
            android:paddingVertical="@dimen/_10ssp"
            android:paddingHorizontal="@dimen/_10ssp"
            android:textColor="@color/white"
            android:textAlignment="gravity"
            android:clickable="true"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Selected"/>


    <TextView
        android:id="@+id/resultstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/resultdescription"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/inter"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        tools:ignore="NotSibling" />

</LinearLayout>

</LinearLayout>