<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cme.PostCmeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Fill the following details and Apply for job..."/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/categorynewbk"
                android:hint="FullName"
                android:paddingStart="@dimen/_10sdp" />

            <EditText
                android:id="@+id/Age"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back"
                android:hint="Age"
                android:paddingStart="@dimen/_10sdp" />

            <Spinner
                android:id="@+id/genderapplicant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back"
                android:hint="Gender"
                android:paddingStart="@dimen/_10sdp" />
            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back"
                android:hint="Email"
                android:paddingStart="@dimen/_10sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/spinner_back"
                    android:gravity="top"
                    android:hint="Cover letter"
                    android:inputType="textMultiLine"
                    android:maxLength="2000"
                    android:minHeight="@dimen/_90sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/char_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="0/2000"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:shadowColor="@color/green"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#AEAAAA"
                    android:text="0 - 1 years"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:shadowColor="@color/green"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#AEAAAA"
                    android:text="1 - 3 years"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:shadowColor="@color/green"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#AEAAAA"
                    android:text="3+ years"/>

            </LinearLayout>

            <EditText
                android:id="@+id/experienced"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back"
                android:hint="What's your past learnings ?"
                android:paddingStart="@dimen/_10sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_10ssp"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:backgroundTint="@color/white"
                android:foreground="@drawable/dotted_border"
                android:elevation="4dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addPdfjobs"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_10ssp"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Attach a Document"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#BAB2B2"/>

                    <TextView
                        android:id="@+id/uploadpdfbtnjobs"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_10ssp"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Upload"
                        android:background="@color/green"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/post_btn2"
                android:backgroundTint="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Post" />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
