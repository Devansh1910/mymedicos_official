<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/questionsbox"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="@dimen/_12ssp"
        android:layout_margin="@dimen/_5sdp"
        android:outlineProvider="background"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_5ssp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5ssp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/unselected"
                    android:paddingEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="Ques."/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/questionspan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/_5ssp"
                        android:fontFamily="@font/roboto_bold"
                        android:textStyle="bold"
                        android:textAlignment="gravity"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="Updating.."/>

                    <ImageView
                        android:id="@+id/ifthequestionhavethumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="start"
                        android:visibility="gone"
                        android:src="@drawable/placeholder"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/optionA"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/categorynewbk"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/optiona"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option A"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_gravity="center"
                    app:dividerColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/categorynewbk"
                    android:drawableStart="@drawable/optionb"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option B"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/optionC"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/categorynewbk"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/optionc"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option C"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_gravity="center"
                    app:dividerColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/categorynewbk"
                    android:drawableStart="@drawable/optiond"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option D"/>

            </LinearLayout>

            <!-- Finish Button (commented out, enable as needed) -->
            <!--
            <TextView
                android:id="@+id/submitanswerbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/submit_btn_new_bk"
                android:textColor="@color/white"
                android:clickable="true"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="gravity"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Finish"/>
            -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
