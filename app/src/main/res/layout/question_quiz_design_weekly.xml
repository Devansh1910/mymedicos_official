<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/questionsbox"
        app:cardCornerRadius="@dimen/_12ssp"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_5ssp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5ssp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/questiontitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_5ssp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="Title.."/>

            <TextView
                android:id="@+id/questionspan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_5ssp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="Updating.."/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/optionA"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/categorynewbk"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/optiona"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option A"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_gravity="center"
                    app:dividerColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/categorynewbk"
                    android:drawableStart="@drawable/optionb"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option B"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/optionC"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/categorynewbk"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/optionc"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option C"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_gravity="center"
                    app:dividerColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/categorynewbk"
                    android:drawableStart="@drawable/optiond"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:textAlignment="gravity"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Option D"/>

            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/submitanswerbtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="@dimen/_5ssp"-->
<!--                android:textSize="@dimen/_14sdp"-->
<!--                android:paddingVertical="@dimen/_5ssp"-->
<!--                android:paddingHorizontal="@dimen/_10ssp"-->
<!--                android:background="@drawable/submit_btn_new_bk"-->
<!--                android:textColor="@color/white"-->
<!--                android:clickable="true"-->
<!--                android:textStyle="bold"-->
<!--                android:fontFamily="@font/roboto_bold"-->
<!--                android:textAlignment="gravity"-->
<!--                android:layout_gravity="center"-->
<!--                android:gravity="center"-->
<!--                android:text="Finish"/>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
