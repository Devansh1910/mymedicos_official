<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetailsActivity">

    <!-- AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar with Title "Jobs" -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <!-- Add a title here -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jobs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3E3E3E" /> <!-- Set text color to black -->
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Your Existing Layout Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <!-- Larger "Job Title" Heading -->
        <TextView
            android:id="@+id/jobTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineer"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#1B1B1B" /> <!-- Set text color to black -->

        <!-- Company Name -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingVertical="@dimen/_2ssp"
            android:paddingHorizontal="@dimen/_10ssp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_height="wrap_content"
            android:text="LinkedIn Corporation"
            android:textSize="16sp"
            android:textColor="#000000" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10ssp"
            android:paddingVertical="@dimen/_2ssp"
            android:background="@drawable/rounded_edittext_background"
            android:text="Mountain View, CA"
            android:textSize="16sp"
            android:textColor="#000000" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_3ssp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/salaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Salary (Annual):"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#707070" /> <!-- Set text color to black -->

            <TextView
                android:id="@+id/salaryEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingHorizontal="@dimen/_5ssp"
                android:text="â‚¹ 100,000 per year"
                android:textSize="15sp"
                android:textColor="#424242" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_3ssp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#636363" />

            <TextView
                android:id="@+id/Job_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Regular/Loccum"
                android:textSize="15sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/openingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_3ssp"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/openingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Openings:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#505050" /> <!-- Set text color to black -->

            <TextView
                android:id="@+id/openingsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:paddingHorizontal="@dimen/_5ssp"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/experienceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_3ssp"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/experienceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#5A5A5A" />

            <TextView
                android:id="@+id/experienceEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="2+ years"
                android:paddingHorizontal="@dimen/_5ssp"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/authorInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">
            <!-- Author Speciality -->
            <LinearLayout
                android:id="@+id/specialityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/authorSpecialityTextView"
                        android:layout_width="wrap_content"
                        android:paddingVertical="@dimen/_2ssp"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_background"
                        android:text="Software Engineering"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/authorSubSpecialityTextView"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:paddingVertical="@dimen/_2ssp"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_height="wrap_content"
                        android:text="Mobile App Development"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Job Description -->
        <TextView
            android:id="@+id/jobDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:paddingTop="@dimen/_5ssp"
            android:textStyle="bold"
            android:textColor="#595959" />

        <TextView
            android:id="@+id/jobDescriptionContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eget lectus non justo blandit luctus. Integer a elit vel ex sodales vestibulum."
            android:textSize="16sp"
            android:paddingTop="1dp"
            android:textColor="#6C6C6C" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/applyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply Now"
                android:background="@drawable/submit_btn"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp" />



        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
