<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobsActivity">

    <!-- AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar with Title "Jobs" -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <!-- Add a title here -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jobs"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000" /> <!-- Set text color to black -->
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Your Existing Layout Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <!-- Larger "Job Title" Heading -->
        <TextView
            android:id="@+id/jobTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineer"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#000000" /> <!-- Set text color to black -->

        <!-- Company Name -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LinkedIn Corporation"
            android:textSize="22sp"
            android:textColor="#000000" /> <!-- Set text color to black -->
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000" />

        <!-- Location -->
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mountain View, CA"
            android:textSize="20sp"
            android:textColor="#000000" /> <!-- Set text color to black -->
    </LinearLayout>
        <!-- Salary -->
        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/salaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000" /> <!-- Set text color to black -->

            <EditText
                android:id="@+id/salaryEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="$100,000 - $120,000 per year"
                android:textSize="15sp"
                android:textColor="#000000" /> <!-- Set text color to black -->
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOB Type:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000" /> <!-- Set text color to black -->

            <EditText
                android:id="@+id/Job_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Regular/Loccum"
                android:textSize="15sp"
                android:textColor="#000000" /> <!-- Set text color to black -->
        </LinearLayout>

        <!-- Number of Openings -->
        <LinearLayout
            android:id="@+id/openingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/openingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Openings:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000" /> <!-- Set text color to black -->

            <EditText
                android:id="@+id/openingsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5"
                android:textSize="18sp"
                android:textColor="#000000" /> <!-- Set text color to black -->
        </LinearLayout>

        <!-- Experience Requirements -->
        <LinearLayout
            android:id="@+id/experienceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/experienceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000" /> <!-- Set text color to black -->

            <EditText
                android:id="@+id/experienceEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="2+ years"
                android:textSize="18sp"
                android:textColor="#000000" /> <!-- Set text color to black -->
        </LinearLayout>

        <!-- Author Information -->
        <LinearLayout
            android:id="@+id/authorInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">
            <!-- Author Speciality -->
            <LinearLayout
                android:id="@+id/specialityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speciality: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000" /> <!-- Set text color to black -->

                    <TextView
                        android:id="@+id/authorSpecialityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Engineering"
                        android:textSize="18sp"
                        android:textColor="#000000" /> <!-- Set text color to black -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subspeciality: "

                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000" /> <!-- Set text color to black -->

                    <TextView
                        android:id="@+id/authorSubSpecialityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile App Development"
                        android:textSize="18sp"
                        android:textColor="#000000" /> <!-- Set text color to black -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Job Description -->
        <TextView
            android:id="@+id/jobDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="#000000" /> <!-- Set text color to black -->

        <!-- Job Description Content -->
        <TextView
            android:id="@+id/jobDescriptionContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eget lectus non justo blandit luctus. Integer a elit vel ex sodales vestibulum."
            android:textSize="18sp"
            android:paddingTop="4dp"
            android:textColor="#000000" /> <!-- Set text color to black -->

        <!-- Buttons Layout -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/applyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply Now"
                android:background="?attr/colorPrimary"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="16dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/shareButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                android:textSize="24sp"

                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
