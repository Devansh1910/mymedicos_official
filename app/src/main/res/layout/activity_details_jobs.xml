<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.job.JobDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/jobsinsidertoolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/jobsinsidertoolbar"
            app:title="Jobs"
            app:navigationIcon="@drawable/arrowbackforappbar"
            app:titleTextColor="@color/black"
            app:subtitleTextColor="@color/white"
            app:subtitleTextAppearance="@color/white"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/jobsinsidertoolbar_container"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">


            <TextView
                android:id="@+id/jobTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Loading.."
                android:textColor="@color/black"
                android:textSize="26sp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/companyNameTextView"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Loading..."
                    android:textColor="#434545"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/jobposteddate"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Loading..."
                    android:textColor="#434545"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Loading..."
                    android:textColor="#434545"
                    android:textSize="16sp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingRight="@dimen/_5ssp"
                android:layout_marginVertical="@dimen/_5ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Posted by"
                android:textColor="#686666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/organizername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Loading..."
                android:fontFamily="@font/roboto_bold"
                android:textColor="#686666"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_3ssp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/briefcase"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="â‚¹"
                android:textColor="#8A8686"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/salaryEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="@dimen/_5ssp"
                android:text="Loading..."
                android:textColor="#8A8686"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="/yr"
                android:textColor="#8A8686"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

            <TextView
                android:id="@+id/Job_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:inputType="text"
                android:text="Loading.."
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/typeback"
                android:textColor="#07AC85"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/buildingjob"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/openingsEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:text="Loading..."
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:text="Employees"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/experienceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/bulb"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/experienceEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:text="Loading,,,"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:text="years of experience"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/authorInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">
            <!-- Author Speciality -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10ssp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/applyButton"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:backgroundTint="@color/green"
                android:text="Apply Now"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <Button
                android:id="@+id/applycant"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:backgroundTint="@color/green"
                android:text="Applycant"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.03"/>

            <LinearLayout
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/savejobsfile"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/savenew"/>

                <TextView
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Role"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#595959"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/_5ssp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/authorSpecialityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:paddingHorizontal="@dimen/_10ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Software Engineering"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/authorSubSpecialityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5ssp"
                android:background="@drawable/rounded_edittext_background"
                android:paddingHorizontal="@dimen/_10ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Mobile App Development"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Job Description -->
        <TextView
            android:id="@+id/jobDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginVertical="@dimen/_8ssp"
            android:textColor="#595959"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobDescriptionContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="1dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eget lectus non justo blandit luctus. Integer a elit vel ex sodales vestibulum."
            android:textColor="#8E8D8D"
            android:textSize="16sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/_5ssp"
        android:paddingHorizontal="@dimen/_10ssp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Explore More"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:drawablePadding="@dimen/_8ssp"
            android:layout_gravity="center"
            android:gravity="end"
            android:textColor="#676666"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/sidearrow" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewjobsinsider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>

</androidx.core.widget.NestedScrollView>