<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/unselected"
        android:textSize="@dimen/_14ssp"
        android:gravity="start"
        android:paddingTop="@dimen/_5ssp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5ssp"
        android:text="Go to any question directly by clicking on its serial number."
        android:fontFamily="@font/inter_semibold"
        android:textColor="#6E6E6E"
        android:textSize="@dimen/_10ssp"
        android:gravity="start" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/unselected"
        app:dividerThickness="@dimen/_1ssp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/answered_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answered: "
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/answered_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:paddingStart="4dp" />

        <TextView
            android:id="@+id/unanswered_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unanswered: "
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/unanswered_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:paddingStart="4dp" />

        <TextView
            android:id="@+id/not_visited_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Visited: "
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/not_visited_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:paddingStart="4dp" />

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:stretchMode="columnWidth" />
    </LinearLayout>
</LinearLayout>
