<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/payfortheexam"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="@dimen/_50ssp"
    android:layout_marginBottom="@dimen/_8ssp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:layout_marginHorizontal="@dimen/_4ssp"
            android:text="A"
            android:textColor="@color/unselected"
            android:textStyle="normal"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/back6"
            android:paddingVertical="@dimen/_5ssp"
            android:paddingHorizontal="@dimen/_10ssp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_height="wrap_content"
            android:src="@drawable/linevertical"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"

        android:layout_marginBottom="@dimen/_4ssp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_7ssp"
        android:background="@drawable/backgroundoftheunselected">

        <LinearLayout
            android:layout_width="wrap_content"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attendNowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:paddingHorizontal="@dimen/_15ssp"
                android:paddingTop="@dimen/_1ssp"
                android:paddingBottom="@dimen/_4ssp"
                android:text="Attend Now"
                android:background="@drawable/corner_resorce"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleSets"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10ssp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/unselected"
            android:text="Loading..."
            android:textSize="@dimen/_14sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10ssp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/availablefromtime"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/unselected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02nd Aug 2024 " />

                <TextView
                    android:id="@+id/questionsTextView"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/unselected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="| 200 questions" />

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/unselected"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/availabletilltime"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unselected"
                    android:text="200 mins" />
                <LinearLayout
                    android:id="@+id/unlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"


                    android:layout_marginHorizontal="@dimen/_9sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="end"
                        android:src="@drawable/unlock">

                    </ImageView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"


                    android:layout_marginHorizontal="@dimen/_9sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="end"
                        android:src="@drawable/lock_svgrepo_com">

                    </ImageView>
                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Basics of Anatomy"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_10ssp"
            android:paddingHorizontal="@dimen/_10ssp"
            android:paddingVertical="@dimen/_4ssp"
            android:background="@drawable/category_background"
            android:textColor="@android:color/white"
            android:layout_gravity="end" />

    </LinearLayout>


