<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingBottom="@dimen/_100sdp"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/upperuploadbtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:paddingEnd="@dimen/_10ssp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:menu="@menu/home_menu">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/setnamewillbehere"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Set A"
                            android:layout_weight="1"
                            android:textSize="@dimen/_18sdp"
                            android:fontFamily="@font/roboto_bold"/>

                        <LinearLayout
                            android:id="@+id/totheback1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_10ssp"
                            android:paddingVertical="@dimen/_5ssp"
                            android:background="@drawable/endbutton">

                            <ImageView
                                android:id="@+id/cart_icon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_5ssp"
                                android:layout_gravity="center"
                                android:src="@drawable/endbtn"
                                android:contentDescription="@null"/>

                            <TextView
                                android:id="@+id/cart_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_24sdp"
                    android:text="3 hrs 30 mins"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundcolor"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"/>

            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/currentquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/inter"
                android:gravity="end"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="18"
                android:textAllCaps="true"
                android:textColor="@color/unselected"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view1"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/prevButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/_10sdp"
                    android:backgroundTint="@color/grey"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:text="Previous" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    app:dividerColor="@color/backgroundcolor"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>

                <Button
                    android:id="@+id/nextButton1"
                    android:layout_width="0dp"
                    android:padding="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/_16sdp"
                    android:text="Next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/instructionguide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:background="@drawable/categoryblackkkkkk"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instructions"
                    android:textColor="@color/unselected"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:layout_gravity="end"
                    android:src="@drawable/infoforverify"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/upperforpayment"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/endenabled1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_8sdp"
            android:text="End Quiz"
            android:textColor="@color/backgroundcolor"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
