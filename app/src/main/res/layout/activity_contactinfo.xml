<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Contactinfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_18sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Basic Details"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:outlineSpotShadowColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/dotted_border"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    <EditText
            android:layout_width="match_parent"
            android:background="@drawable/back6"
            android:paddingStart="@dimen/_10sdp"
            android:layout_height="50dp"
            android:hint="Email ID"
            android:textSize="@dimen/_14ssp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back6"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="20dp"
            android:hint="Phone Number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="@dimen/_10ssp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10ssp"
                android:text="Location :"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10ssp"
                android:background="@drawable/back6"/>

        </LinearLayout>

        <EditText
            android:id="@+id/permaddr"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:textSize="@dimen/_14ssp"
            android:padding="@dimen/_8ssp"
            android:background="@drawable/back6"
            android:hint="Present Address (Optional)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Check, If you are at the same Place."/>

        </LinearLayout>

        <EditText
            android:id="@+id/presaddr"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:textSize="@dimen/_14ssp"
            android:padding="@dimen/_8ssp"
            android:background="@drawable/back6"
            android:hint="Permanent Address (Optional)"/>

        <Button
            android:id="@+id/consubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:backgroundTint="@color/black"
            android:hint="Submit"
            android:onClick="submitButton"
            android:textColorHint="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>