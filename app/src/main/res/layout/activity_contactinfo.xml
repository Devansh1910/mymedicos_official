<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    tools:context=".activities.profile.Contactinfo">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_18sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Basic Details"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_10ssp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/brforprofile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingHorizontal="@dimen/_5ssp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:paddingVertical="@dimen/_4ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        android:text="Complete your doctor verification enter your Registered Medical Council number to proceed further"
                        android:textColor="#939393"
                        android:textSize="@dimen/_8ssp" />

                    <Button
                        android:id="@+id/upload_avatar"
                        android:paddingHorizontal="@dimen/_5ssp"
                        android:layout_marginTop="@dimen/_5ssp"
                        android:paddingVertical="@dimen/_10ssp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upload Avatar"
                        android:backgroundTint="@color/green"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circularbordersolid"
                android:id="@+id/phonenumberll"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/indianflag"/>

                <EditText
                    android:id="@+id/email1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PhoneNumber"
                    android:textSize="16sp"
                    android:maxLength="10"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/maincircularborderring"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emainin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:padding="12dp">

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/gmailio"
                    android:fontFamily="@font/inter"
                    android:hint="Email Address"
                    android:inputType="text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_10ssp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_8ssp"
                    android:text="Location :"/>

                <Spinner
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:background="@drawable/circularbordersolid"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/present1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_8ssp"
                android:background="@drawable/circularbordersolid"
                android:hint="Present Address (Optional)"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="wrap_content"
                    android:shadowColor="@color/backgroundcolor"
                    android:layout_height="wrap_content"
                    android:checked="false"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/unselected"
                    android:textStyle="bold"
                    android:text="Check, If you are at the same Place."/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/permanent1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_8ssp"
                android:background="@drawable/circularbordersolid"
                android:hint="Permanent Address (Optional)"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10ssp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Personal Details"
                    android:textColor="@color/unselected"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age1"
                android:layout_width="match_parent"
                android:background="@drawable/circularbordersolid"
                android:paddingStart="@dimen/_10sdp"
                android:layout_height="50dp"
                android:hint="Enter Age"
                android:inputType="number"
                android:textSize="@dimen/_14ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_10ssp"
                android:orientation="horizontal">

<!--                <Spinner-->
<!--                    android:id="@+id/speciality"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="@dimen/_10ssp"-->
<!--                    android:background="@drawable/back6"/>-->

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radiogrp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:text="Gender"
                    android:textColor="@color/unselected"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:hint="Male"
                    android:textStyle="bold"
                    android:text="Male"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:layout_weight="1"
                    android:hint="Female"
                    android:text="Female"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/others"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:hint="Others"
                    android:text="Others"
                    android:textSize="15sp" />

            </RadioGroup>

            <Button
                android:id="@+id/consubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5ssp"
                android:backgroundTint="@color/green"
                android:hint="Submit"
                android:onClick="submitButton"
                android:textColorHint="#FFFFFF" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>