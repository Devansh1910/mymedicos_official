<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:flow_horizontalAlign="center">

    <ImageView
        android:layout_width="288dp"
        android:layout_height="306dp"
        android:layout_margin="50dp"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/frame_28"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Integration of medical and tech together"
            android:textAlignment="center"
            android:textColor="#2D6C9D"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Efficient admin support, streamlined workflows, and effective communication tools optimize doctors' professional needs for superior patient care in the dynamic healthcare landscape.."
            android:textAlignment="center"
            android:textColor="#174971"
            android:textSize="13sp" />
    </LinearLayout>
    <Button
        android:id="@+id/startButton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Get Started"
        android:padding="8dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cornerRadius= "12dp"/>

</LinearLayout>