<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetstartedActivity"
    android:background="@drawable/bgstarting">


    <TextView
        android:id="@+id/welcome_"
        android:layout_width="142dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Welcome,"
        android:textColor="#335A53"
        android:textSize="27sp"
        android:textStyle="normal"

        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/connecting_"
        android:layout_width="347dp"
        android:layout_height="98dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:gravity="top"
        android:text="Connecting White Coats"
        android:textColor="#2c5733"
        android:textSize="44sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="165dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="586dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/Phone"
            android:layout_margin="16sp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="586dp">




        </ImageView>

        <EditText

            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="Continue with Phone number" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>