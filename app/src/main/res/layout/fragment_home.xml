<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.home.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="100dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:elevation="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingHorizontal="@dimen/_10ssp"
                            android:elevation="@dimen/_16sdp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome,"
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/inter_extrabold"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/personnamewillbehere"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingHorizontal="2dp"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:textSize="@dimen/_14ssp"
                                android:fontFamily="@font/inter_extrabold"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <ViewFlipper
                            android:id="@+id/viewFlipper"
                            android:autoStart="true"
                            android:paddingVertical="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="15dp"
                                android:textColor="#595656"
                                android:fontFamily="@font/inter"
                                android:text="To the healer weaving hope: positive vibes, dear doctor!"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="In the world of health, your dedication stands out. Good thoughts to you, doctor!"
                                android:fontFamily="@font/inter"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#595656"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="15dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Amid challenges, your commitment shines. Positive energy, amazing doctor!"
                                android:textSize="13sp"
                                android:fontFamily="@font/inter"
                                android:textStyle="bold"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="15dp"
                                android:textColor="#595656"/>

                        </ViewFlipper>

                        <LinearLayout
                            android:id="@+id/dotsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/_5ssp"
                        android:layout_marginHorizontal="5dp"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/mainbackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back1">

                                    <ImageView
                                        android:id="@+id/cme_img1"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:src="@drawable/cmeicon" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="CME"
                                    android:textSize="@dimen/_10sdp"
                                    tools:ignore="TextSizeCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back2">

                                    <ImageView
                                        android:id="@+id/pub_image"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:src="@drawable/publicationicon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Library"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back1">

                                    <ImageView
                                        android:id="@+id/news_home"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:src="@drawable/newsicon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="News"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back2">

                                    <ImageView
                                        android:id="@+id/jobs_img"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:src="@drawable/jobicon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Jobs"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingTop="@dimen/_8ssp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back1">


                                    <ImageView
                                        android:id="@+id/ugexams"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_8ssp"
                                        android:src="@drawable/ugicon" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="UG exams"
                                    android:textSize="@dimen/_10sdp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back2">

                                    <ImageView
                                        android:id="@+id/pg_prep"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_8ssp"
                                        android:src="@drawable/pgicon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Post Graduate"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/back1">

                                    <ImageView
                                        android:id="@+id/university"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_8ssp"
                                        android:src="@drawable/universityicon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Updates"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/back2">

                                    <ImageView
                                        android:id="@+id/meme"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_8ssp"
                                        android:src="@drawable/memeicon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Memes"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:elevation="@dimen/_16sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Recommended Jobs"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/navigatejobs"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:drawablePadding="@dimen/_8ssp"
                            android:drawableEnd="@drawable/sidearrow"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:textColor="#676666"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_job1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardjobs"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:elevation="4dp">

                        <!-- Card Content Layout -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NO CONTENT"
                                android:textSize="16sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@android:color/black"/>

                            <!-- Add more views or customize the layout as needed -->

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:elevation="@dimen/_16sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Also Check out!"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        app:cardCornerRadius="@dimen/_15ssp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:paddingVertical="4dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp">

                            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                                android:id="@+id/homecarousel"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                app:showNavigationButtons="false"
                                app:showCaption="false"
                                app:autoPlay="true"/>

                        </androidx.cardview.widget.CardView>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:elevation="@dimen/_16sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Quick Explore"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/navigatecmeinsider"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:drawablePadding="@dimen/_8ssp"
                            android:drawableEnd="@drawable/sidearrow"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:textColor="#676666"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_5ssp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_10ssp">

                        <TextView
                            android:id="@+id/home1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5ssp"
                            android:layout_weight="1"
                            android:background="@drawable/colorofhomeactivity"
                            android:paddingHorizontal="@dimen/_5ssp"
                            android:paddingVertical="@dimen/_10ssp"
                            android:text="Upcoming"
                            android:textAlignment="center"
                            android:textColor="#454242"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/home2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5ssp"
                            android:layout_weight="1"
                            android:background="@drawable/colorofhomeactivity"
                            android:paddingHorizontal="@dimen/_5ssp"
                            android:paddingVertical="@dimen/_10ssp"
                            android:text="Past"
                            android:textAlignment="center"
                            android:textColor="#454242"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/home3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/colorofhomeactivity"
                            android:paddingHorizontal="@dimen/_5ssp"
                            android:paddingVertical="@dimen/_10ssp"
                            android:text="Ongoing"
                            android:textAlignment="center"
                            android:textColor="#454242"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Featured CME"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/navigatecme"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:drawablePadding="@dimen/_8ssp"
                            android:drawableEnd="@drawable/sidearrow"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:textColor="#676666"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_cme1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardcme"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:elevation="4dp">

                        <!-- Card Content Layout -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">


                            <TextView
                                android:id="@+id/descriptionTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NO CONTENT"
                                android:textSize="16sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@android:color/black"/>

                            <!-- Add more views or customize the layout as needed -->

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingBottom="20dp"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:elevation="@dimen/_8sdp"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/newdrawableforvideo"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:text="Know us More"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="@dimen/_10sdp"
                                android:src="@drawable/bordercategory"/>

                            <com.google.android.exoplayer2.ui.StyledPlayerView
                                android:id="@+id/player_view_home"
                                android:layout_width="match_parent"
                                android:layout_height="580dp" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>