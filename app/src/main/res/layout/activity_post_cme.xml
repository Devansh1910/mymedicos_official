<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cme.PostCmeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/fill_the_following_details_and_post_your_cme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/cme_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/spinner_back"
                android:hint="@string/title_of_the_cme"
                android:paddingStart="@dimen/_10sdp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/cme_organiser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/organiser"
                android:paddingStart="@dimen/_10sdp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/cme_presenter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back"
                android:hint="@string/presenter"
                android:paddingStart="@dimen/_10sdp"
                tools:ignore="RtlSymmetry" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/cme_venu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/spinner_back"
                    android:hint="@string/description"
                    android:gravity="top"
                    android:paddingVertical="@dimen/_10ssp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:maxLength="2000"
                    android:inputType="textMultiLine"/>

                <TextView
                    android:id="@+id/char_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/_0_2000"
                    android:textColor="@android:color/darker_gray"
                    android:paddingEnd="@dimen/_20sdp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <Spinner
                android:id="@+id/cmemode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back" />

            <Spinner
                android:id="@+id/cmespeciality"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back" />

            <Spinner
                android:id="@+id/cmesubspeciality"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back" />

            <TextView
                android:id="@+id/room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="@dimen/_12ssp"
                android:text="@string/create_a_random_room_code_to_organize_your_cme"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#888282"/>

            <EditText
                android:id="@+id/cme_virtuallink"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/spinner_back"
                android:hint="@string/virtual_link_code"
                android:paddingStart="@dimen/_10sdp"
                tools:ignore="RtlSymmetry" />

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->

<!--                <CheckBox-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text=""-->

<!--            </LinearLayout>-->

            <EditText
                android:id="@+id/cme_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/spinner_back"
                android:hint="@string/place_if_offline"
                android:paddingStart="@dimen/_10sdp"
                android:visibility="gone"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDatePicker"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_date"/>

                <Button
                    android:id="@+id/btnTimePicker"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:backgroundTint="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_time"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5ssp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_date"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_time"/>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginBottom="@dimen/_10ssp"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:backgroundTint="@color/white"
                android:foreground="@drawable/dotted_border"
                android:elevation="4dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addPdf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_10ssp"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Attach a Document"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#BAB2B2"/>

                    <TextView
                        android:id="@+id/uploadpdfbtn"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_10ssp"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Upload"
                        android:background="@color/green"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/post_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="Post" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
