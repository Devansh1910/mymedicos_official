<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.publications.activity.PublicationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingEnd="@dimen/_10ssp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green"
            app:menu="@menu/home_menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backtothehomefrompublication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/arrow_bk"
                    android:layout_marginEnd="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Library"
                    android:layout_weight="1"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/roboto_bold"/>

                <LinearLayout
                    android:id="@+id/totheccart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:background="@drawable/cartbknew">

                    <TextView
                        android:id="@+id/cart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/cart_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_5ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/bookicon"
                        android:contentDescription="@null"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:outlineSpotShadowColor="@color/black"
            android:layout_height="wrap_content"
            app:mt_hint="Search your favorite book"
            app:mt_placeholder="Medicos hub"
            app:mt_navIconEnabled="true"
            app:mt_maxSuggestionsCount="10"
            app:mt_speechMode="false" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:lottie_autoPlay="true"
        android:scaleType="center"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/pgpgp"
        app:lottie_speed="1" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:showNavigationButtons="false"
                    app:showCaption="false"
                    app:autoPlay="true"/>

            </androidx.cardview.widget.CardView>

            <!-- For Recent uploaded -->

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/_5ssp"
                android:layout_height="wrap_content">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Top Explored Readables"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewfortop"
                android:outlineSpotShadowColor="@color/white"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentaddedbooksList"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <!-- For Category -->

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/_5ssp"
                android:layout_height="wrap_content">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Filter your Niche"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:outlineSpotShadowColor="@color/white"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <!-- For Promotions -->

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/_5ssp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Promotions Corner (Offers)"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_260sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                        android:id="@+id/carouselsponsor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:showNavigationButtons="false"
                        app:showCaption="false"
                        app:autoPlay="false"/>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/specialproductList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:elevation="@dimen/_10sdp" />

            </RelativeLayout>

            <!-- For TextBooks -->

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/_5ssp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="TextBooks &amp; Research"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Promotion Video -->

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/_5ssp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Watch &amp; Shop, Live"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:dividerThickness="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingBottom="200dp"
                android:paddingHorizontal="@dimen/_5ssp"
                android:elevation="@dimen/_1sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.google.android.exoplayer2.ui.StyledPlayerView
                    android:id="@+id/player_view_library"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

            <!-- Need Help -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need Help ? "
                    android:fontFamily="@font/inter"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/inter_extrabold"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>