<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/green"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btnresultbtn"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/resulttoolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/resulttoolbar"
            app:title="Report"
            app:navigationIcon="@drawable/arrow_bk"
            app:titleTextColor="@color/black"
            app:subtitleTextColor="@color/white"
            app:subtitleTextAppearance="@color/white"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/correctanswercounter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="10"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/unselected"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="/"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/unselected"/>

        <TextView
            android:id="@+id/totalanswwercounter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="10"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/unselected"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="@dimen/_10sdp"
        android:id="@+id/resultRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


</LinearLayout>
