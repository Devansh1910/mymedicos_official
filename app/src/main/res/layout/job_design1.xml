<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/m"
    app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/fulldetails"
            android:layout_width="280dp"
            android:paddingVertical="@dimen/_4ssp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"                android:paddingHorizontal="@dimen/_10ssp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Enter Position here"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_date"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15ssp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="01-Sept-2023"
                    android:textColor="#616161"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/hosp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:paddingHorizontal="@dimen/_8ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Hospital Name"
                android:textColor="#A39E9E"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/Apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:background="@drawable/bkofjobs"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/job_loc"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Enter the state here"
                        android:textColor="#4A4949"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Category"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/jobbackground"
                        android:gravity="center"
                        android:text="Loccum"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</androidx.cardview.widget.CardView>