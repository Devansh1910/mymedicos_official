<!-- res/layout/item_index.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/payfortheexam"

    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_6ssp"

    android:background="@drawable/item_background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attendNowTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAlignment="textEnd"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/_1ssp"
        android:paddingLeft="@dimen/_14ssp"
        android:paddingBottom="@dimen/_4ssp"
        android:text="Attend Now"
        android:paddingRight="@dimen/_20ssp"
        android:background="@drawable/corner_resorce"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5ssp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="Cardiology Prep 03"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_6ssp"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5ssp"
        android:layout_marginLeft="@dimen/_8ssp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dateTextView"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02nd Aug 2024 " />

        <TextView
            android:id="@+id/questionsTextView"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 200 questions" />

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/unselected"
            android:layout_height="wrap_content"
            android:text=" | " />

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_8ssp"
            android:layout_height="wrap_content"
            android:textColor="@color/unselected"
            android:text="200 mins" />
    </LinearLayout>

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basics of Anatomy"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_10ssp"
        android:paddingRight="@dimen/_10ssp"

        android:layout_marginTop="@dimen/_6ssp"
        android:paddingTop="@dimen/_5ssp"
        android:paddingBottom="@dimen/_2ssp"
        android:paddingLeft="@dimen/_14ssp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@drawable/category_background"

        android:textColor="@android:color/white"
        android:layout_gravity="end" />
</LinearLayout>
