<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:orientation="vertical"
        android:backgroundTint="#E6E1FAF2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_8ssp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5ssp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dr_ug_profile"
                    android:layout_width="20dp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:src="@drawable/bkgroundimg"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/dr_ug_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Devansh Saxena "
                    android:textStyle="bold"
                    android:textColor="#504F4F"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/dr_ug_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_2ssp"
                    android:paddingVertical="@dimen/_2ssp"
                    android:text="01-Sept-2023"
                    android:maxLines="1"
                    android:textColor="#8F8D8D"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="@dimen/_5ssp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingRight="@dimen/_100ssp"
                    android:background="@drawable/bkofcmedetail">

                    <TextView
                        android:id="@+id/dr_ug_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hellobbbbbbbrrrrrrrrrrrrrrrrrnnbrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr"
                        android:lineHeight="@dimen/_14sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="#817E7E"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/dr_ug_desciption"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:layout_height="wrap_content"
                    android:maxEms="1"
                    android:maxLength="56"
                    android:layout_weight="2"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:text="This is the description place where we'll be entering..."
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>