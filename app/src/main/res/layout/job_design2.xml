<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10ssp"
    android:layout_height="wrap_content"
    android:background="@drawable/m"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/job_pos1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/montserrat_medium"
                android:text="Enter Position here"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15ssp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="01-Sept-2023"
                android:textColor="#616161"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/hosp_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5ssp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Hospital Name"
            android:textColor="#424141"
            android:paddingHorizontal="@dimen/_10ssp"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5ssp"
                android:paddingHorizontal="@dimen/_10ssp"
                android:background="@drawable/bkofjobs"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_loc1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Enter the state here"
                    android:textColor="#4A4949"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoryshow"
                    android:layout_width="0dp"
                    android:text="Loccum"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jobbackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>