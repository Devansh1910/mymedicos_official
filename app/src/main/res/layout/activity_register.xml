<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Registration"
                android:textColor="@color/unselected"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/unselected"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Please fill the following details!" />


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/fullnamein"
                       android:layout_width="match_parent"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_height="match_parent"
                       android:layout_marginTop="@dimen/_5sdp"
                       app:boxStrokeErrorColor="#6BC1F2">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/fullnameedit"
                           android:layout_width="match_parent"
                           android:background="@drawable/bkregister"
                           android:layout_height="wrap_content"
                           android:drawablePadding="@dimen/_10sdp"
                           android:hint="Enter Your Name"
                           android:textColorHint="#676767"
                           android:inputType="text|textPersonName" />
                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/emainin"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="@dimen/_10sdp"
                       app:boxStrokeErrorColor="#6BC1F2">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/emailedit"
                           android:layout_width="match_parent"
                           android:background="@drawable/bkregister"
                           android:layout_height="wrap_content"
                           android:drawableStart="@drawable/mail"
                           android:drawablePadding="@dimen/_10sdp"
                           android:hint="Enter Email"
                           android:inputType="text|textEmailAddress" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/password"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="@dimen/_10sdp"
                       app:boxStrokeErrorColor="#6BC1F2">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/passwordedit"
                           android:layout_width="match_parent"
                           android:background="@drawable/bkregister"
                           android:layout_height="wrap_content"
                           android:drawableStart="@drawable/passedit"
                           android:drawablePadding="@dimen/_10sdp"
                           android:hint="Enter Password"
                           android:inputType="text|textEmailAddress" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/phonenumber"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="@dimen/_10sdp"
                       app:boxStrokeErrorColor="#6BC1F2">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/phonenumberededit"
                           android:layout_width="match_parent"
                           android:background="@drawable/bkregister"
                           android:layout_height="wrap_content"
                           android:drawableStart="@drawable/phone"
                           android:drawablePadding="@dimen/_10sdp"
                           android:maxLength="10"
                           android:hint="Enter Phone Number"
                           android:inputType="number" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Select State"
                       android:drawablePadding="@dimen/_5ssp"
                       android:drawableEnd="@drawable/location"
                       android:layout_marginVertical="@dimen/_8ssp"
                       android:layout_marginHorizontal="@dimen/_20sdp"
                       android:textStyle="bold"
                       android:textColor="@color/unselected"/>

                   <Spinner
                       android:id="@+id/city"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_width="match_parent"
                       android:padding="@dimen/_13ssp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/bkregister"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="What's your Favourite Topic ?"
                       android:drawablePadding="@dimen/_5ssp"
                       android:layout_marginVertical="@dimen/_8ssp"
                       android:layout_marginHorizontal="@dimen/_20sdp"
                       android:textStyle="bold"
                       android:textColor="@color/unselected"/>

                   <Spinner
                       android:id="@+id/interest"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_width="match_parent"
                       android:padding="@dimen/_13ssp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/bkregister"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Pincode"
                       android:drawablePadding="@dimen/_5ssp"
                       android:drawableEnd="@drawable/pincode"
                       android:textSize="@dimen/_12ssp"
                       android:layout_marginVertical="@dimen/_8ssp"
                       android:layout_marginHorizontal="@dimen/_20sdp"
                       android:textStyle="bold"
                       android:textColor="@color/unselected"/>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/pincodewritter"
                       android:layout_width="match_parent"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_height="match_parent"
                       app:boxStrokeErrorColor="#6BC1F2">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/pincode"
                           android:layout_width="match_parent"
                           android:background="@drawable/bkregister"
                           android:layout_height="wrap_content"
                           android:hint="Enter Pincode"
                           android:inputType="number"
                           android:maxLength="6"
                           android:textColor="@color/black"
                           android:textColorHint="#676767"/>
                   </com.google.android.material.textfield.TextInputLayout>
                   
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:gravity="left"
                       android:layout_marginHorizontal="@dimen/_20sdp"
                       android:layout_marginVertical="@dimen/_8ssp"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:textColor="#000000"
                           android:layout_marginBottom="@dimen/_5ssp"
                           android:text="Enjoy The Benefits Of:"/>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingRight="5dp"
                               android:src="@drawable/correct"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/_10ssp"
                               android:text="Find ideal medical roles, internships and fellowships."/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingRight="5dp"
                               android:src="@drawable/correct"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/_10ssp"
                               android:text="Network, collaborate, and learn with medical peers \nwho share interests."/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingRight="5dp"
                               android:src="@drawable/correct"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Find ideal medical roles, internships and fellowships."/>

                       </LinearLayout>

                   </LinearLayout>

                   <Button
                       android:id="@+id/register"
                       android:layout_width="match_parent"
                       android:layout_marginHorizontal="@dimen/_20ssp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:backgroundTint="#6DFFDA"
                       android:text="Register"
                       android:textColor="#636060"
                       android:textSize="@dimen/_16ssp"
                       android:textStyle="bold" />

                   <TextView
                       android:id="@+id/loginreg"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:text="Already have an Account? Login."
                       android:textColor="@color/blue"
                       android:textStyle="bold" />
               </LinearLayout>
           </LinearLayout>
       </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>